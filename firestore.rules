// Only authenticated users can read/write.
// When creating, they can only write with their own uid.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /submissions/{docId} {
      // Users can only read their own documents
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      // Create: restrict allowed fields and basic type checks
      allow create: if request.auth != null
                    && request.resource.data.keys().hasAll(["text", "userId"]) 
                    && request.resource.data.keys().hasOnly(["text","userId","userEmail","userName","createdAt"]) 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.text is string
                    && request.resource.data.text.size() > 0
                    && (request.resource.data.userEmail == null || request.resource.data.userEmail is string)
                    && (request.resource.data.userName == null || request.resource.data.userName is string)
                    && (request.resource.data.createdAt == null || request.resource.data.createdAt is timestamp);
      allow update, delete: if false;
    }
  }
}